@model Eve.Core.Models.Entities.Category

@{
    ViewData["title"] = "Eve - Categorías";
}

<style>
    .main-category-container {
        width: 100%;
        height: 100vh;
        display: grid;
        place-content: center;
    }

    #FormCategory {
        width: 100%;
        height: 100%;
    }

    .category-modal {
        box-sizing: border-box;
        width: 400px;
        min-height: 400px;
        padding: 12px 0;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        grid-gap: 12px;
        border: 1px solid #7B2CBF;
        border-radius: 8px;
        box-shadow: #7B2CBF 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
    }

    .category-body {
        width: 80%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        gap: 12px;
    }

    .category-body section {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .category-body section {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .category-body section input {
        padding: 8px;
        color: #E0AAFF;
        background-color: #240046;
        border: none;
        border-radius: 6px;
        outline-color: #7B2CBF;
        height: 40px;
    }

    .category-body label:first-child {
        font-weight: 600;
    }

    .category-footer {
        width: 80%;
        display: grid;
        place-content: center;
        grid-gap: 8px;
    }

    .category-footer button {
        width: 240px;
        height: 40px;
        background-color: #3C096C;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.2s all ease;
        color: #E0AAFF;
        font-weight: 600;
    }

    .category-footer button:hover {
        background-color: #5A189A;
    }

    .category-footer a {
        text-align: center;
        color: #5A189A;
    }

    .category-footer a:hover {
        color: #E0AAFF;
    }
</style>

<div class="main-category-container">
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { id = "FormCategory" }))
    {
        <div class="category-modal">
            <div>
                <h3>Editar categoría</h3>
            </div>
            <div class="category-body">
                @Html.HiddenFor(e => e.CategoryId)
                <section>
                    @Html.LabelFor(e => e.Name)
                    @Html.EditorFor(e => e.Name)
                    @Html.ValidationMessageFor(e => e.Name)
                </section>
            </div>
            <div class="category-footer">
                <button onclick="">Editar</button>
            </div>
        </div>
    }
</div>