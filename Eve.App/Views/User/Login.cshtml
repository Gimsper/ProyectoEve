@model Eve.Core.ViewModel.UserDataViewModel

@{
    Layout = "_LayoutNoHeader";
    ViewData["title"] = "Login";
}

<style>
    .main-login-container {
        width: 100%;
        height: 100vh;
        display: grid;
        place-content: center;
    }

    #FormLogin {
        width: 100%;
        height: 100%;
    }

    .login-modal {
        box-sizing: border-box;
        width: 400px;
        min-height: 400px;
        padding: 12px 0;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        grid-gap: 12px;
        border: 1px solid #7B2CBF;
        border-radius: 8px;
        box-shadow: #7B2CBF 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
    }

    .login-body {
        width: 80%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        gap: 12px;
    }

    .login-body section {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .login-body section {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .login-body section input {
        padding: 8px;
        color: #E0AAFF;
        background-color: #240046;
        border: none;
        border-radius: 6px;
        outline-color: #7B2CBF;
        height: 40px;
    }

    .login-body label:first-child {
        font-weight: 600;
    }

    .login-footer {
        width: 80%;
        display: grid;
        place-content: center;
        grid-gap: 8px;
    }

    .login-footer button {
        width: 240px;
        height: 40px;
        background-color: #3C096C;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.2s all ease;
        color: #E0AAFF;
        font-weight: 600;
    }

    .login-footer button:hover {
        background-color: #5A189A;
    }

    .login-footer a {
        text-align: center;
        color: #5A189A;
    }

    .login-footer a:hover {
        color: #E0AAFF;
    }
</style>

<div class="main-login-container">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "FormLogin" })) {
        <div class="login-modal">
            <div>
                <h3>Iniciar sesión</h3>
            </div>
            <div class="login-body">
                <section>
                    @Html.LabelFor(e => e.Username)
                    @Html.EditorFor(e => e.Username)
                    @Html.ValidationMessageFor(e => e.Username)
                </section>
                <section>
                    @Html.LabelFor(e => e.Password)
                    @Html.EditorFor(e => e.Password)
                    @Html.ValidationMessageFor(e => e.Password)
                </section>
            </div>
            <div class="login-footer">
                <button onclick="">Ingresar</button>
                <a asp-action="Register" asp-controller="User">Registrase</a>
            </div>
        </div>
    }
</div>