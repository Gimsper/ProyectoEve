@model Eve.Core.ViewModel.SourceViewModel

@{
    ViewData["title"] = "Eve - Recursos";
}

<style>
    .main-source-container {
        width: 100%;
        height: 100vh;
        display: grid;
        place-content: center;
    }

    #Formsource {
        width: 100%;
        height: 100%;
    }

    .source-modal {
        box-sizing: border-box;
        width: 400px;
        min-height: 400px;
        padding: 12px 0;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
        grid-gap: 12px;
        border: 1px solid #7B2CBF;
        border-radius: 8px;
        box-shadow: #7B2CBF 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
    }

    .source-body {
        width: 80%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        gap: 12px;
    }

    .source-body section {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .source-body section {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .source-body section input {
        padding: 8px;
        color: #E0AAFF;
        background-color: #240046;
        border: none;
        border-radius: 6px;
        outline-color: #7B2CBF;
        height: 40px;
    }

    .source-body section select {
        padding: 8px;
        color: #E0AAFF;
        background-color: #240046;
        border: none;
        border-radius: 6px;
        outline-color: #7B2CBF;
        height: 40px;
    }

    .source-body label:first-child {
        font-weight: 600;
    }

    .source-footer {
        width: 80%;
        display: grid;
        place-content: center;
        grid-gap: 8px;
    }

    .source-footer button {
        width: 240px;
        height: 40px;
        background-color: #3C096C;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.2s all ease;
        color: #E0AAFF;
        font-weight: 600;
    }

    .source-footer button:hover {
        background-color: #5A189A;
    }

    .source-footer a {
        text-align: center;
        color: #5A189A;
    }

    .source-footer a:hover {
        color: #E0AAFF;
    }
</style>

<div class="main-source-container">
    @using (Html.BeginForm("Create", "Source", FormMethod.Post, new { id = "FormSource" }))
    {
        <div class="source-modal">
            <div>
                <h3>Añadir recurso</h3>
            </div>
            <div class="source-body">
                <section>
                    @Html.LabelFor(e => e.Name)
                    @Html.EditorFor(e => e.Name)
                    @Html.ValidationMessageFor(e => e.Name)
                </section>
                <section>
                    @Html.LabelFor(e => e.Description)
                    @Html.EditorFor(e => e.Description)
                    @Html.ValidationMessageFor(e => e.Description)
                </section>
                <section>
                    @Html.LabelFor(e => e.SourceType)
                    @Html.DropDownListFor(e => e.SourceType, new SelectList(Enum.GetValues(typeof(Eve.Core.Models.Entities.SourceType))))
                    @Html.ValidationMessageFor(e => e.SourceType)
                </section>
                <section>
                    @Html.LabelFor(e => e.CategoryId)
                    @Html.DropDownListFor(e => e.CategoryId, (SelectList)ViewBag.SelectListCategories, "Seleccionar categoría")
                    @Html.ValidationMessageFor(e => e.CategoryId)
                </section>
            </div>
            <div class="source-footer">
                <button onclick="">Agregar</button>
            </div>
        </div>
    }
</div>